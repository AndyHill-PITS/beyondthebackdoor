{% extends "layout.njk" %}

{% block content %}
<main class="testimonials-page">

  {% if welcome_heading %}
    <h2>{{ welcome_heading }}</h2>
  {% endif %}

  {% if intro_text %}
    <p class="intro">{{ intro_text | markdown | safe }}</p>
  {% endif %}

  {% if testimonials %}
    <div class="testimonials-wrap">
      {% for t in testimonials %}
        <div class="testimonial-card">
          <blockquote>“{{ t.quote }}”</blockquote>
          <p class="author">– {{ t.author }}{% if t.location %}, {{ t.location }}{% endif %}</p>
        </div>
      {% endfor %}
    </div>
  {% endif %}
  
</main>
{% endblock %}