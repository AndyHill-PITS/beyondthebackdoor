{% extends "layout.njk" %}

{% block content %}
  <h2>{{ welcome_heading }}</h2>
  <p>{{ intro_text }}</p>

  <p><strong>Template loaded.</strong></p>

  <h3>Dump of page.testimonials</h3>
  <pre>{{ page.testimonials | dump }}</pre>

  <h3>Dump of testimonials</h3>
  <pre>{{ testimonials | dump }}</pre>

  {% if testimonials %}
    <h3>Looping through testimonials:</h3>
    <ul>
      {% for t in testimonials %}
        <li>
          "{{ t.quote }}" â€” <strong>{{ t.author }}</strong> ({{ t.location }})
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p><em>No testimonials available.</em></p>
  {% endif %}
{% endblock %}
