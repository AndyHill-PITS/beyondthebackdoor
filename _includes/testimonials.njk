{% extends "layout.njk" %}

{% block content %}
  <main class="testimonials-page">
    <div class="container">
      <h2>{{ title }}</h2>
      <p>{{ intro_text | markdown | safe }}</p>

      {% for item in testimonials_list %}
        <blockquote class="testimonial">
          <p>“{{ item.quote }}”</p>
          <footer>– {{ item.author }}{% if item.location %}, {{ item.location }}{% endif %}</footer>
        </blockquote>
      {% endfor %}
    </div>
  </main>
{% endblock %}