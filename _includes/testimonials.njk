{% extends "layout.njk" %}

{% block content %}
  <main class="testimonials">
    <div class="container">
      {% if intro_text %}
        <p>{{ intro_text | markdown | safe }}</p>
      {% endif %}

      {% if testimonials %}
        {% for t in testimonials %}
          <div class="testimonial">
            <blockquote>
              “{{ t.quote }}”
            </blockquote>
            <p class="author">– {{ t.author }}{% if t.location %}, {{ t.location }}{% endif %}</p>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </main>
{% endblock %}