{% extends "layout.njk" %}

{% block content %}
  <div class="content-wrapper">
    <h2>{{ welcome_heading }}</h2>
    <p>{{ intro_text | safe }}</p>

    <form action="https://formspree.io/f/myzjvpld" method="POST" class="contact-form">
      <div class="form-group">
        <label for="name"><strong>Name</strong></label>
        <input type="text" id="name" name="name" required>
      </div>

      <div class="form-group">
        <label for="email"><strong>Email</strong></label>
        <input type="email" id="email" name="email" required>
      </div>

      <div class="form-group">
        <label for="phone"><strong>Phone Number</strong></label>
        <input type="text" id="phone" name="phone">
      </div>

      <div class="form-group">
        <label for="message"><strong>What are you looking to achieve â€“ include as much or as little detail as you like!</strong></label>
        <textarea id="message" name="message" rows="5" required></textarea>
      </div>

      <button type="submit">Send Enquiry</button>
    </form>

  </div>
{% endblock %}